# Streamlit Secrets Configuration Template
# Copy this file to 'secrets.toml' and fill in your values
# When deploying to Streamlit Cloud, add these secrets in the app settings

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT = "https://your-endpoint.openai.azure.com/"
AZURE_OPENAI_API_KEY = "your-api-key-here"
AZURE_OPENAI_API_VERSION = "2025-01-01-preview"

# Deployment names
EMBEDDING_DEPLOYMENT = "text-embedding-3-large"
CHAT_DEPLOYMENT = "gpt-4o-mini"

# Embedding configuration
EMBEDDING_DIMENSION = "3072"

# Similarity metric: "cosine" or "semantic"
SIMILARITY_METRIC = "cosine"

# Search configuration
TOP_K_RESULTS = "10"

# Scoring weights (must sum to 1.0)
SEMANTIC_WEIGHT = "0.7"
SIMILARITY_WEIGHT = "0.3"

# RAG configuration
MAX_CONTEXT_LENGTH = "4000"
TEMPERATURE = "0"
MAX_TOKENS = "1000"
QUERY_REFRAMING_TIMEOUT = "10.0"
